<Window x:Class="opg3003.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:opg3003"
        mc:Ignorable="d"
        Title="WeatherApp" Height="450" Width="800">
    <Grid>
    <Grid.Background>
      <ImageBrush Stretch="None" ImageSource="https://www.placecage.com/c/800/450" AlignmentX="Center" AlignmentY="Center"/>
    </Grid.Background>
    <TextBox x:Name="tbxCityName" HorizontalAlignment="Left" Height="23" Margin="82,88,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
    <TextBlock Padding="2px" Background="White" HorizontalAlignment="Left" Margin="82,58,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="21"><Run Text="Enter city name:"/><LineBreak/><Run/></TextBlock>
    <Button x:Name="btnWeather" Content="Get Weather" HorizontalAlignment="Left" Margin="82,125,0,0" VerticalAlignment="Top" Width="75"/>
    <TextBlock Padding="2px" Background="White" HorizontalAlignment="Left" Margin="290,58,0,0" TextWrapping="Wrap" Text="Temperature:" VerticalAlignment="Top"/>
    <TextBlock x:Name="tbkDegrees" Padding="2px" Background="White" HorizontalAlignment="Left" Margin="290,95,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
  </Grid>
</Window>
